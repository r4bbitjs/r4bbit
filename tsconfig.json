{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "declaration": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "e2e/**/*"
  ]
}
